<div class="jumbotron">
  <h1 class="display-4">Yummy Burgers!</h1>
  <p class="lead">Add your favorite burger and it will show up in a list to be devoured. Once a burger appears on the list, you then have the option to devour it!</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-5">
      <h2>Burgers available!</h2>
        <ul class="list-group">
        {{#each burgers}}
          {{#unless devoured}}
            <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="devourburger btn btn-success col-sm-4" id="devourbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span><strong>Devour! ðŸ˜‹</strong></span></button>
          {{/unless}}
        {{/each}}
        </ul>
    </div>

    <div class="col-md-5 offset-md-1">
      <h2>Burgers devoured!</h2>
      <ul class="list-group">
        {{#each burgers}}
          {{#if devoured}}
            <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>Add a Burger</h2>

<form class="create-form">
  <div class="form-group">
    <label for="newBurg">Burger Name:</label>
    <input type="text" class="form-control" id="newBurg" name="burger">
  </div>

  <button type="submit" class="btn btn-success" id="addBurger">Add Burger</button>
</form>
    </div>
  </div>
</div>
